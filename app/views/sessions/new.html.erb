<h1>Sign In</h1>
<%= form_tag :session do %>
  <div class="form-group">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>
<p>Don't have an account yet? <%= link_to 'Sign Up', signup_path %></p>
<%= link_to "Cancel", root_path %>